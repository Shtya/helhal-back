{
  "info": {
    "name": "Platform API",
    "description": "API endpoints for the platform with sample request bodies",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/categories?search=&page=1&limit=10&sortBy=created_at&sortOrder=DESC",
              "host": ["{{base_url}}"],
              "path": ["categories"],
              "query": [
                { "key": "search", "value": "" },
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" },
                { "key": "sortBy", "value": "created_at" },
                { "key": "sortOrder", "value": "DESC" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Category by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/categories/:id",
              "host": ["{{base_url}}"],
              "path": ["categories", ":id"]
            }
          },
          "response": []
        },
        {
          "name": "Create Category (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Category\",\n  \"type\": \"category\",\n  \"description\": \"Category description\",\n  \"image\": \"https://example.com/image.jpg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/categories",
              "host": ["{{base_url}}"],
              "path": ["categories"]
            }
          },
          "response": []
        },
        {
          "name": "Update Category (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Category Name\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/categories/:id",
              "host": ["{{base_url}}"],
              "path": ["categories", ":id"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Category (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/categories/:id",
              "host": ["{{base_url}}"],
              "path": ["categories", ":id"]
            }
          },
          "response": []
        },
        {
          "name": "Get Category Services",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/categories/:slug/services?page=1",
              "host": ["{{base_url}}"],
              "path": ["categories", ":slug", "services"],
              "query": [{ "key": "page", "value": "1" }]
            }
          },
          "response": []
        }
      ]
    }
  ]
